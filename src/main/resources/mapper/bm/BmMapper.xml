<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.modu.app.prj.bm.mapper.BmMapper">
 	
	<!-- 즐겨찾기 전체조회 --> 	
	<select id="BmList" resultType="BmVO" parameterType="String">
	SELECT *
	FROM bm
	WHERE partici_memb_uni_no=#{particiMembUniNo}
	ORDER BY reg_dt DESC
	</select>
	
	
	<!-- 게시판 즐겨찾기 -->
	<insert id="BrdBmInsert" parameterType="BmVO">
		INSERT INTO brd_arm (brd_arm_uni_no,bm,arm_yn,brd_uni_no,partici_memb_uni_no)
		VALUES
		(brdarm_seq.nextval,Y,Y,#{brdUniNo},#{particiMembUniNo})
	</insert>
	
 </mapper>