<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.modu.app.prj.bm.mapper.BmMapper">
 	
	<!-- 게시판 전체조회 --> 	
	<select id="BmList" resultType="BmVO" parameterType="String">
	SELECT *
	FROM bm
	WHERE partici_memb_uni_no=#{particiMembUniNo}
	ORDER BY reg_dt DESC
	</select>
	
	<insert id="bmInsert" parameterType="BmVO">
	INSERT INTO bm (bm_uni_no,reg_dt,partici_memb_uni_no,post_uni_no,att_no,chat_no)
	VALUES (bm_seq.nextval,sysdate,#{particiMembUniNo},#{postUniNo},#{attNo},#{chatNo}
	</insert>
	
 </mapper>